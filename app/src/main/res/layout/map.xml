<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manhattonNavigate_486.Map">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#CCFFFFFF"
        android:elevation="10dp">

        <LinearLayout
            android:id="@+id/navStepInputContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_start_point"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:hint="Start location"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp" />

            <EditText
                android:id="@+id/et_end_point"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:hint="End location"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"
                android:layout_marginStart="6dp" />

            <Button
                android:id="@+id/btn_start_nav"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Start"
                android:layout_marginStart="6dp"
                android:backgroundTint="#FF5722"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/queryBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Advanced Search"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp" />

            <Button
                android:id="@+id/btn_disability_nav"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ðŸ‘¨â€ðŸ¦¼â€âž¡ï¸NaviðŸ§‘â€ðŸ¦¯â€âž¡ï¸"
                android:layout_marginStart="6dp"
                android:backgroundTint="#0D47A1"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_zip"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:hint="Enter ZIP code"
                android:background="@android:drawable/editbox_background"
                android:padding="8dp"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_zip_search"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="GO"
                android:layout_marginStart="6dp"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_toggle_mapview"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Map Mode"
                android:layout_marginStart="6dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Tilt æŽ§åˆ¶ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tiltLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tilt:"
                android:textColor="#000000"
                android:layout_marginEnd="6dp" />

            <SeekBar
                android:id="@+id/tiltSeekBar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tiltValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0Â°"
                android:layout_marginStart="6dp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- ðŸ”½ è·¯å¾„é€‰æ‹©åŒº -->
    <LinearLayout
        android:id="@+id/pathSelectionContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:visibility="gone" />

    <!-- ðŸ”½ stepå¯¼èˆª -->
    <LinearLayout
        android:id="@+id/stepNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#CCFFFFFF"
        android:elevation="8dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnPrevStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬…ï¸ Prev" />

        <TextView
            android:id="@+id/stepText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Step Instruction"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next âž¡ï¸" />
    </LinearLayout>

    <!-- ðŸ”½ è¯´æ˜ŽåŒºåŸŸ -->
    <LinearLayout
        android:id="@+id/instructionContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="#CCFFFFFF"
        android:paddingTop="4dp"
        android:elevation="6dp"
        android:layout_marginBottom="64dp"
        android:visibility="visible">

        <View
            android:layout_width="60dp"
            android:layout_height="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@android:color/darker_gray" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/instructionView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="ðŸ§­ Instructions will appear here..."
                android:textColor="#000000"
                android:textSize="16sp" />
        </ScrollView>

        <Button
            android:id="@+id/btn_hide_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬‡ï¸"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:textSize="18sp"
            android:textColor="#555555" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_hide_top_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ”¼"
        android:layout_gravity="bottom|start"
        android:layout_margin="12dp"
        android:background="#AAFFFFFF"
        android:textColor="#000000"
        android:textSize="16sp"
        android:elevation="6dp" />

    <Button
        android:id="@+id/btn_hide_all_ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â¬‡ï¸ HIDE UI"
        android:layout_gravity="bottom|end"
        android:layout_margin="12dp"
        android:background="#AA000000"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:elevation="6dp" />
</FrameLayout>
